
@model Avenue.DTO.CityDto

@{
    ViewBag.Title = "افزودن";
}



<div class="content-wrapper">
   <h3>افزودن
   <small> <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("لیست", "Index")
            </li>
            <li class="active">
                <strong>افزودن</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("بازگشت به لیست", "Index", null, new { @class = "btn btn-primary"})
        </div>
    </div>
</div></small>
</h3>
<div class="panel panel-default">
<div class="panel-heading"></div>
<div class="panel-body">

				@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

<fieldset class="col-md-6">

        <div class="form-group">
            @Html.LabelFor(model => model.StatesId, new { @class = "col-sm-2 control-label" })
            <div class="col-md-6">
                @Html.DropDownListFor(x=>x.StatesId, (IEnumerable<SelectListItem>)ViewBag.stateId,"انتخاب استان ...",new{@class="form-control"})
                @Html.ValidationMessageFor(model => model.StatesId)
            </div>
        </div>
</fieldset>

<fieldset class="col-md-6">

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.Name,new{@class="form-control"})
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
</fieldset>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
				@Html.ActionLink("انصراف", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}

                </div>
            </div>
			</div>

 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


