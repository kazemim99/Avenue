
@model Avenue.DTO.CategoryDto

@{
    ViewBag.Title = "افزودن";
}






<div class="content-wrapper">
    <h3>
        افزودن
        <small>
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-sm-4">
                    <ol class="breadcrumb">
                        <li>
                            @Html.ActionLink("لیست", "Index")
                        </li>
                        <li class="active">
                            <strong>افزودن</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-sm-8">
                    <div class="title-action">
                        @Html.ActionLink("بازگشت به لیست", "Index", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </small>
    </h3>
    <div class="panel panel-default">
        <div class="panel-heading"></div>
        <div class="panel-body">

            @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x=>x.Id);
                    <fieldset class="col-md-6">

                        <div class="form-group">
                            @Html.LabelFor(model => model.ParentId, new { @class = "col-sm-2 control-label" })
                            <div class="col-md-6">
                                @Html.DropDownListFor(x => x.ParentId, (IEnumerable<SelectListItem>)ViewBag.categoryParenId, "انتخاب والد گروه...", new { @class = "form-control", Id = "Parent" })
                                @Html.ValidationMessageFor(model => model.ParentId)
                            </div>
                        </div>
                    </fieldset>

                    @*<fieldset class="col-md-6">

                            <div class="form-group">
                                @Html.LabelFor(model => model.ParentId, new { @class = "col-sm-2 control-label" })
                                <div class="col-md-6">
                                    @Html.DropDownListFor(x => x.ParentId, (IEnumerable<SelectListItem>)ViewBag.CategoryId, "انتخاب والد گروه...", new { @class = "form-control", name = "ParentId" })
                                    @Html.ValidationMessageFor(model => model.ParentId)
                                </div>
                            </div>
                        </fieldset>*@
                    <fieldset class="col-md-6">

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="col-md-6">

                        <div class="form-group">
                            @Html.LabelFor(model => model.EnName, new { @class = "col-sm-2 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.EnName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EnName)
                            </div>
                        </div>
                    </fieldset>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="ذخیره" class="btn btn-primary" />
                            @Html.ActionLink("انصراف", "Index", null, new { @class = "btn btn-white" })
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>



<script type="text/javascript">
    $()
        .ready(function () {
            $(".field-validation-error").addClass("text-danger");
            if ("@ViewBag.message" !== " ") {
                if ("@ViewBag.style" === "success") {
                    window.swal("@ViewBag.message", " ", "success");

                } else {
                    $.notify("@ViewBag.message", "@ViewBag.style");
                }
            }
        })
</script>


@section Styles {
    @Styles.Render("~/bundles/SweetAlertCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    @Scripts.Render("~/bundles/SweetAlert")
}
