@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="block-center mt-xl wd-xl">
   <!-- START panel-->
   <div class="panel panel-dark panel-flat">
      <div class="panel-heading text-center">
         <a href="#">
            <img src="~/Content/Images/logo.png" alt="Image" class="block-center img-rounded" />
         </a>
      </div>
      <div class="panel-body">
         <p class="text-center pv">PASSWORD RESET</p>
              @using (Html.BeginForm("ResetPassword", "Account")) { 
              <p class="text-center">لطفا ایمیل خود را برای بازیابی رمز عبور وارد نمایید</p>
              <div class="form-group has-feedback">
                  <label for="resetInputEmail1" class="text-muted">آدرس ایمیل</label>
                  <input id="resetInputEmail1" type="email" name="Email" placeholder="ایمیل شما" autocomplete="off" class="form-control"/>
                  <span class="fa fa-envelope form-control-feedback text-muted"></span>
              </div>
              <button type="submit" class="btn btn-danger btn-block">ارسال</button>
              }
      </div>
   </div>
   <!-- END panel-->
</div>