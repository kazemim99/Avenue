
@model Avenue.DTO.TypeFacilitiesDTO

@{
    ViewBag.Title = "افزودن";
}

<div class="content-wrapper">
    <h3>
        افزودن
        <small>
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-sm-4">
                    <ol class="breadcrumb">
                        <li>
                            @Html.ActionLink("لیست", "Index")
                        </li>
                        <li class="active">
                            <strong> افزودن امکانات هر سرویس</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-sm-8">
                    <div class="title-action">
                        @Html.ActionLink("بازگشت به لیست", "Index", null, new {@class = "btn btn-primary"})
                    </div>
                </div>
            </div>
        </small>
    </h3>
    <div class="panel panel-default">
        <div class="panel-heading"></div>
        <div class="panel-body">

            @using (Html.BeginForm("Create", "TypeFacilities", FormMethod.Post, new {enctype = "multipart/form-data"}))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)

                    <fieldset class="col-md-6">

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, new {@class = "col-sm-2 control-label"})
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                    </fieldset>

                    <fieldset class="col-md-6">

                        <div class="form-group">
                            @Html.LabelFor(model => model.AvenueTypeId, new { @class = "col-sm-2 control-label" })
                            <div class="col-md-6">
                                @Html.DropDownList("AvenueTypeId", null,"انتخاب نوع سرویس...", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AvenueTypeId)
                            </div>
                        </div>
                    </fieldset>

                    <fieldset class="col-md-6">

                        <div class="form-group">
                            @Html.LabelFor(model => model.Icon, new {@class = "col-sm-2 control-label"})
                            <div class="col-md-6">
                                <input type="file" name="icon" class="form-control"/>
                                @Html.ValidationMessageFor(model => model.Icon)
                            </div>
                        </div>
                    </fieldset>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="ذخیره" class="btn btn-primary"/>
                            @Html.ActionLink("انصراف", "Index", null, new {@class = "btn btn-white"})
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>



<script  type="text/javascript">
    $()
        .ready(function () {
            $(".field-validation-error").addClass("text-danger");
            if ("@ViewBag.message" !== " ") {
                if ("@ViewBag.style" === "success") {
                    window.swal("@ViewBag.message", " ", "success");

                } else {
                    $.notify("@ViewBag.message", "@ViewBag.style");
                }
            }
        })
</script>


@section Styles {
    @Styles.Render("~/bundles/SweetAlertCss")
}
@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
 @Scripts.Render("~/bundles/SweetAlert")
}
